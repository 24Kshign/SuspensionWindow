<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/ari_iv_image"
        android:layout_width="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@mipmap/ic_launcher_round"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="10:7"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/ari_tv_time"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        tools:text="2018.09.28"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ari_tv_title"
        android:layout_width="0dp"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ari_tv_time"
        app:layout_constraintLeft_toRightOf="@id/ari_iv_image"
        tools:text="Android程序员不得不了解的JavaScript基础"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#e1e1e1"
        android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>